generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum LearningStatus {
  NOT_LEARNED
  LEARNING
  MASTERED
}

model Users {
  userId    Int      @id @default(autoincrement())
  email     String   @unique
  fName     String
  lName     String
  password  String
  createdAt DateTime @default(now())

  cardStudied Int @default(0)
  correct     Int @default(0)

  sets         Sets[]
  userCardInfo UserCardInfo[]
  UserSetInfo  UserSetInfo[]
}

model Sets {
  setId  Int @id @default(autoincrement())
  userId Int

  name        String
  description String?

  numCards  Int      @default(0)
  createdAt DateTime @default(now())

  user        Users         @relation(fields: [userId], references: [userId], onDelete: Cascade)
  flashcards  Flashcard[]
  UserSetInfo UserSetInfo[]
}

model Flashcard {
  cardId Int @id @default(autoincrement())
  setId  Int

  term              String
  definition        String
  contentDefinition String?
  audioDefinition   String?
  contentTerm       String?
  audioTerm         String?

  set          Sets           @relation(fields: [setId], references: [setId], onDelete: Cascade)
  userCardInfo UserCardInfo[]
}

model UserCardInfo {
  cardId         Int
  userId         Int
  favorite       Boolean        @default(false)
  learningStatus LearningStatus @default(NOT_LEARNED)
  lastReviewed   DateTime       @default(now())

  flashcard Flashcard @relation(fields: [cardId], references: [cardId], onDelete: Cascade)
  user      Users     @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@id([cardId, userId])
}

model UserSetInfo {
  setId  Int
  userId Int

  color        String   @default("#FDB927")
  lastAccess   DateTime @default(now())
  cardsLearned Int      @default(0)

  sets Sets  @relation(fields: [setId], references: [setId], onDelete: Cascade)
  user Users @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@id([setId, userId])
}
